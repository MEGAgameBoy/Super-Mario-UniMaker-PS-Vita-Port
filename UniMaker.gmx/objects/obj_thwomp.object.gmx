        with(instance_create(x+32,y+16,obj_statuesmoke)) image_xscale = 1;

        //Rise
        alarm[0] = 60

    }

}

//Stop after returning
else if ready = 3
and y &lt; ystart+1
{
    ready = 0
    vspeed = 0
    y = ystart
}

